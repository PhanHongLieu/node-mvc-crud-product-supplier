<%- include('../partials/header') %>
<h2>Products</h2>
<a href="/products/new" class="btn btn-primary mb-2">Add Product</a>
<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Supplier</th>
    <th>Actions</th>
  </tr>
  <% products.forEach(p => { %>
  <tr>
    <td><%= p.name %></td>
    <td><%= p.price %></td>
    <td><%= p.quantity %></td>
    <td><%= p.supplierId ? p.supplierId.name : '' %></td>
    <td>
      <a href="/products/<%= p._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
      <a href="/products/<%= p._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
    </td>
  </tr>
  <% }) %>
</table>
<%- include('../partials/footer') %>
